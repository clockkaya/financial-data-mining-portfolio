    targetdb = pd.read_csv(target_data_path, encoding='utf-8', sep='\t', converters={'PARTY_ID': str})

    # 构建训练集 (2020年7月数据)
    train_target = targetdb[(targetdb['OPEN_DT_FIRST'] >= 20200701) & (targetdb['OPEN_DT_FIRST'] <= 20200731)].copy()
    train_target['label'] = 1
    
    # 负样本采样
    existing_ids = set(train_target['PARTY_ID'])
    train_not_target = fulldb[~fulldb['PARTY_ID'].isin(existing_ids)].sample(30000, random_state=5)
    train_not_target['label'] = 0
    
    train = pd.concat([train_target, train_not_target]).fillna(0)
    
    print(f"Train set shape: {train.shape}")
    print(f"Positive samples: {train_target.shape[0]}")

