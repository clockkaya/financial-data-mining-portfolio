import os
import pandas as pd
import numpy as np
from sklearn.cluster import KMeans
from sklearn import preprocessing
import matplotlib.pyplot as plt
from mpl_toolkits.mplot3d import Axes3D

# 1. 数据预处理与加载
# 模拟从数据库加载后的宽表数据
# 假设包含：party_id, acct_bal (账户余额), tx_amt_vol (交易流量)
print("Loading customer transaction data...")

# 示例数据结构 (Mock)
data = {
    'acct_bal': np.random.rand(100) * 10000,
    'tx_amt_vol': np.random.rand(100) * 50000
}
dbfull_wide = pd.DataFrame(data)

# 2. 数据归一化 (Normalization)
# K-Means 对距离敏感，必须进行 L2 正则化
print("Normalizing data...")
X_normalized = preprocessing.normalize(dbfull_wide, norm='l2')

# 3. 寻找最佳 K 值 (Elbow Method)
def plot_elbow_curve(data, max_k=10):
    sse = []
    for k in range(2, max_k + 1):
        kmeans = KMeans(n_clusters=k, random_state=42)
        kmeans.fit(data)
        sse.append(kmeans.inertia_)
    
    plt.figure(figsize=(10, 6))
    plt.plot(range(2, max_k + 1), sse, 'o-')
    plt.title('Elbow Method for Optimal K')
    plt.xlabel('Number of Clusters (K)')
    plt.ylabel('SSE')
    plt.show()

plot_elbow_curve(X_normalized)

# 4. 聚类与可视化
k = 6 # 假设根据手肘法选择了6
kmeans = KMeans(n_clusters=k, random_state=42)
labels = kmeans.fit_predict(X_normalized)

dbfull_wide['cluster'] = labels

print("Customer Segmentation Complete. Cluster counts:")
print(dbfull_wide['cluster'].value_counts())